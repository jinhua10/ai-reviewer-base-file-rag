<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- 加入文件名和行号 %F:%L -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} (%F:%L) - %msg%n</pattern>
            <!-- 使用运行时 console.encoding 属性，以便在 Windows 下可以为 GBK -->
            <charset>${console.encoding:-UTF-8}</charset>
        </encoder>
    </appender>

    <!-- 文件输出 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/ai-reviewer-rag.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/ai-reviewer-rag.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <!-- 加入文件名和行号 %F:%L -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} (%F:%L) - %msg%n</pattern>
            <charset>${console.encoding:-UTF-8}</charset>
        </encoder>
    </appender>

    <!-- 根日志级别 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- 特定包的日志级别 -->
    <logger name="top.yumbo.ai.rag" level="INFO" />
    <logger name="org.apache.lucene" level="WARN" />
    <logger name="org.apache.tika" level="WARN" />

</configuration>
